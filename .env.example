# ===========================================
# Team Planner - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ----- Database -----
DATABASE_URL=postgresql://planner:your-secure-password@localhost:5432/planner

# ----- Authentication -----
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min32chars
JWT_REFRESH_SECRET=your-refresh-token-secret-key-change-in-prod-min32

# ----- Server -----
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# ----- Application -----
# The public URL where your app is accessible (used for email links)
APP_URL=http://localhost:5173

# ----- Stripe Billing (Optional) -----
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
# Get from webhook settings in Stripe dashboard
STRIPE_WEBHOOK_SECRET=whsec_...
# Create products in Stripe and copy price IDs
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PRO=price_...

# ----- Email - Resend (Optional) -----
# Get from https://resend.com/api-keys
RESEND_API_KEY=re_...
# The email address to send from (must be verified in Resend)
EMAIL_FROM=noreply@yourdomain.com
